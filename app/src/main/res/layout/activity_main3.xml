<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity.MainActivity3"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="80dp">

        <ImageView
            android:id="@+id/expandBackground"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/shayariNo"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10 / 60"
            android:fontFamily="@font/times"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/reloadBackground"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reload"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/shayariBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_pink"
            android:orientation="vertical"
            android:elevation="10dp">

            <TextView
                android:id="@+id/emoji1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoescb"
                android:paddingHorizontal="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/shayari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/times"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/emoji2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoescb"
                android:paddingHorizontal="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_weight="4.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/copyShayari"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/copy1"
            android:background="@drawable/bggreentored"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/previousShayari"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_previous"
            android:background="@drawable/bggreentored"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/edit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil2"
            android:background="@drawable/bggreentored"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/nextShayari"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_next_item"
            android:background="@drawable/bggreentored"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/shareShayari"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_share"
            android:background="@drawable/bggreentored"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>
    </LinearLayout>


</LinearLayout>